<%- include('common/header.ejs')%>
<%- include('common/page_title.ejs', {page_title: page_title})%>
<%- include('common/menus.ejs')%>

<div class="container-fluid mb-4">
    <div class="container">
        <div class="col-12 text-center contact_margin_svnit ">
            <div class="text-center fh5co_heading py-2">Posts Lists</div>
        </div>
        <div class="row">
            <!-- add button for add post  to right side-->
            <div class="col-12 text-right my-2">
                <a href="/admin/posts/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add Post</a>

            </div>
            <div class="col-12 col-md-12 col-12 mx-auto">
                <!-- create table to show all posts -->
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Created At</th>

                            <th>Post Type</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%
                        k=0;
                        posts.forEach(function(post) { %>
                        <tr>
                            <td><%= ++k %></td>
                            <td>
                                <!-- img tag for img path for images inside uploads -->
                                <img src="/uploads/<%= post.img %>" alt="<%= post.title %>" class="img-fluid" width="100" height="100">
                            </td>
                            <td><%= post.title %></td>
                            <td><%= post.description.substring(0, 50) %></td>
                            <td><%= post.date %></td>
                            <td><%= post.post_type %></td>
                            <td>
                                <a href="/admin/posts/edit/<%= post.id %>" class="btn btn-primary btn-sm "><i class="fa fa-pencil"></i></a>
                                <a href="/admin/posts/delete/<%= post.id %>" class="btn btn-danger btn-sm delete_post"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>

                </table>

            </div>

        </div>
    </div>
</div>


<%- include('common/footer.ejs') %>